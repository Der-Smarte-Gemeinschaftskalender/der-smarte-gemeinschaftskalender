# Docker Environment Configuration
# Copy this file to .env and adjust values for your deployment

# Application
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:CHANGE_THIS_TO_GENERATED_KEY
APP_URL=https://example.com

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secure_password_here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# JWT
JWT_SECRET=change_this_jwt_secret

# Domain Configuration
DOMAIN=example.com
ACME_EMAIL=admin@example.com

# Mobilizon (Default Fallback Routes)
MOBILIZON_INSTANCE_NAME=DSG Mobilizon
MOBILIZON_HOST=localhost
MOBILIZON_EMAIL=admin@example.com
MOBILIZON_REPLY_EMAIL=noreply@example.com